    .collapse.navbar-collapse#bs-example-navbar-collapse-1
      %ul.nav.navbar-nav.navbar-right
        %li= link_to 'Blog', '/index.html'
        %li= link_to 'About', '/about.html'
        %li
          = link_to '<i class="fa fa-rss-square"></i>', '/feed.xml', id: 'feed_link'

